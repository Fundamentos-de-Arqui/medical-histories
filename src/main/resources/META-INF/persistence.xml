<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.1">

    <persistence-unit name="default" transaction-type="JTA">

        <jta-data-source>java:jboss/datasources/MedicalHistories</jta-data-source>



        <class>com.soulware.medicalhistory.domain.model.aggregates.ClinicalFolder</class>
        <class>com.soulware.medicalhistory.domain.model.aggregates.Entry</class>
        <class>com.soulware.medicalhistory.domain.model.entities.ClinicalFolderStatus</class>

        <properties>
            <!-- Hibernate/JPA -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/medical-histories?useSSL=false&amp;allowPublicKeyRetrieval=true&amp;serverTimezone=UTC"/>

        </properties>
    </persistence-unit>

</persistence>
